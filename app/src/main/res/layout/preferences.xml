<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:id="@+id/text" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Switch
        android:id="@+id/notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Activer les Notifications"
        android:layout_below="@+id/text"
        android:layout_alignParentLeft="true" />

    <View
        android:id="@+id/ligne"
        android:layout_height="1dp"
        android:background="@color/gris"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:layout_below="@id/notifications"
        />

    <TextView android:id="@+id/notif_pref_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/notif_pref_ok"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:textSize="13.0sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/ligne"
        ></TextView>

    <TextView android:id="@+id/notif_pref_no"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/notif_pref_no"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:textSize="13.0sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/ligne"
        ></TextView>

</RelativeLayout>